<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                                android:background="@drawable/info_setting">


        <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/Return"
                android:background="@drawable/return_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:text="用户信息"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/User_Info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/Return"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/blackText"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintTop_toBottomOf="@id/Return"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line2"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GrayLine"/>
    </LinearLayout>

    <TextView
        android:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/Name"
        app:layout_constraintTop_toTopOf="@id/Line2"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/blackText"/>

    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/Name_data"
            app:layout_constraintTop_toBottomOf="@id/Line2"
            app:layout_constraintEnd_toStartOf="@id/Name_Setting"
            android:layout_marginEnd="10dp"
            android:gravity="end|center_vertical"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:ems="8"/>

    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Name_Setting"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/Line2"
            app:layout_constraintBottom_toTopOf="@id/Line3"
            android:background="@drawable/edit2"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintTop_toBottomOf="@id/Name"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line3"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GrayLine"/>
    </LinearLayout>

    <TextView
            android:text="密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Password"
            app:layout_constraintTop_toBottomOf="@id/Line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/blackText"/>

    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Password_Setting"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/Line3"
            app:layout_constraintBottom_toTopOf="@id/Line4"
            android:background="@drawable/edit2"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintTop_toBottomOf="@id/Password"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line4"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GrayLine"/>

    </LinearLayout>

    <TextView
            android:text="个性签名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sign"
            app:layout_constraintTop_toBottomOf="@id/Line4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/blackText"/>

    <Button

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/Sign_Setting"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/Line4"
            app:layout_constraintBottom_toTopOf="@id/Line5"
            android:background="@drawable/edit2"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintTop_toBottomOf="@id/Sign"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line5"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GrayLine"/>

    </LinearLayout>

    <TextView
            android:text="To be a better man."
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/Sign_data"
            app:layout_constraintTop_toBottomOf="@id/Line4"
            app:layout_constraintEnd_toStartOf="@id/Sign_Setting"
            android:layout_marginEnd="10dp"
            android:gravity="end|center_vertical"
            android:textSize="20sp"
            android:ems="10"
            android:layout_marginTop="15dp"/>

</android.support.constraint.ConstraintLayout>
