<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/info_setting">

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/Return"
            android:background="@drawable/return_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="学习设定"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/learning_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/Return"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/blackText"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintTop_toBottomOf="@id/Return"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line2"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GrayLine"/>
    </LinearLayout>

    <TextView
            android:text="学习模式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Mode"
            android:gravity="center"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/Line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
    />
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/Mode"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:checkedButton="@+id/remember"
            android:id="@+id/Mode_Setting"
            android:orientation="horizontal"
    >

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="识记"
                android:textSize="20sp"
                android:id="@+id/remember"
        />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼写"
                android:textSize="20sp"
                android:id="@+id/spell"
        />

    </RadioGroup>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/Mode"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line3"
            android:layout_marginTop="15dp"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
    </LinearLayout>

    <TextView
            android:text="学习量（新词/总数量）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Amount"
            android:gravity="center"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/Line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
    />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/Amount"
            app:layout_constraintEnd_toEndOf="@id/Mode_Setting"
            app:layout_constraintStart_toStartOf="@id/Mode_Setting"
            android:id="@+id/Amount_Setting"
            android:orientation="vertical"
            android:checkedButton="@+id/A50">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/50"
                android:textSize="20sp"
                android:id="@+id/A50"
        />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/100"
                android:textSize="20sp"
                android:id="@+id/A100"
        />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/150"
                android:textSize="20sp"
                android:id="@+id/A150"
        />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40/200"
                android:textSize="20sp"
                android:id="@+id/A200"
        />
    </RadioGroup>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/Amount_Setting"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line4"
            android:layout_marginTop="15dp"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
    </LinearLayout>

    <TextView
            android:text="单词库选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Book"
            android:gravity="center"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/Line4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
    />
    <Button

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/book_setting"
            app:layout_constraintTop_toTopOf="@+id/Book"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:background="@drawable/list"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/book_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/Line5"
            android:layout_marginTop="15dp"
            >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Line5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="当前单词库"
            android:textSize="20sp"
            android:id="@+id/Book_Now"
            android:textColor="@color/blackText"
    />

    <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:id="@+id/Book_Cover"
            app:layout_constraintTop_toBottomOf="@id/Book_Now"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/book_bg"
            android:src="@drawable/cover1"
            android:padding="1dp"
    />

    <TextView
            android:text="TestBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Book_Name"
            app:layout_constraintTop_toTopOf="@id/Book_Cover"
            app:layout_constraintStart_toEndOf="@id/Book_Cover"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="20sp"
            />



</android.support.constraint.ConstraintLayout>
