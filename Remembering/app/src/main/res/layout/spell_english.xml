<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Return"
            android:background="@drawable/return_icon"
    />
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:max="100"
            android:progress="50"
            app:layout_constraintLeft_toRightOf="@id/Return"
            app:layout_constraintRight_toLeftOf="@id/TobeEasy"
            android:id="@+id/progressBar"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/TobeEasy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/Line2"
            android:layout_marginEnd="10dp"
            android:background="@drawable/delete"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintTop_toBottomOf="@id/Return"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@id/Word"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line2"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GrayLine"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该单词长度为："
            app:layout_constraintTop_toBottomOf="@id/NoteHint"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:textSize="16sp"
            android:textColor="@color/blackText"
            android:id="@+id/spell_title"/>

    <EditText
            android:hint=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spell_title"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:gravity="left|center_vertical"
            android:id="@+id/Word"
            android:textColor="@color/blackText"
            android:textSize="30sp"
            android:typeface="sans"
    />

    <TextView
            android:text="v. 放弃，抛弃，舍弃"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/ChineseMeaning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Line2"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:textColor="@color/DarkStateGray"
            android:gravity="center"
            android:visibility="visible"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintTop_toBottomOf="@id/ChineseMeaning"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Line3"
            android:visibility="visible"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Silver"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的笔记"
            app:layout_constraintTop_toBottomOf="@id/Line3"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:id="@+id/Note_Title"
            android:visibility="visible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NoteHint"
            android:text="当前笔记为XXX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Note_Title"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/DarkStateGray"
            android:gravity="center"
            android:visibility="visible"/>


    <Button
            android:text="确认"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/GotIt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/DontKnow"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/add_button_bg"/>
    <Button
            android:text="放弃"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/DontKnow"
            app:layout_constraintStart_toEndOf="@id/GotIt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/add_button_bg"/>
</android.support.constraint.ConstraintLayout>
