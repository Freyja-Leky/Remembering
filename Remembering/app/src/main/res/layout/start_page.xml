<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/start_page"
android:background="@drawable/start_bg">


    <TextView
            android:text="XXX Days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CountingDay"
            android:gravity="center"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:textColor="@color/blackText"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/CountingDay"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Line2"

    >
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/Grey"
                android:layout_weight="20"
                android:gravity="center"/>
        <TextView
                android:text="当前词书"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/TodayTask"
                android:gravity="center_horizontal|top"
                android:textColor="@color/DarkStateGray"
                android:layout_weight="10"/>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/Grey"
                android:layout_weight="20"
                android:gravity="center"/>
    </LinearLayout>

    <TextView
            android:text="我的单词书1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WordBook"
            android:textColor="@color/blackText"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/Line2"
            android:layout_marginTop="60dp"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new2"
            android:id="@+id/NewWordText"
            app:layout_constraintTop_toTopOf="@id/ReviewWordText"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ReviewWordText"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@drawable/old_word"
            android:id="@+id/ReviewWordText"
            app:layout_constraintTop_toBottomOf="@id/WordBook"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@drawable/all_word"
            app:layout_constraintTop_toTopOf="@id/ReviewWordText"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toEndOf="@id/ReviewWordText"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/WholeWordText"/>

    <TextView
            android:text="XX"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NewWord"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/NewWordText"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ReviewWordText"
            android:textColor="@color/Plum"
        />
    <TextView
            android:text="XX"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReviewWord"
            app:layout_constraintTop_toBottomOf="@id/ReviewWordText"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/Plum"/>
    <TextView
            android:text="XX"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WholeWord"
            app:layout_constraintTop_toBottomOf="@id/WholeWordText"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/ReviewWordText"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/Plum"/>

    <Button
            android:layout_width="212dp"
            android:layout_height="47dp"
            android:background="@drawable/start_button_bg"
            android:text="开始学习"
            android:textSize="20dp"
            android:id="@+id/start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Line3"
            android:layout_marginBottom="80dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/MenuLine"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:id="@+id/Line3"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/MenuLine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"

    >
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:gravity="center"
        />

        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/start"
                android:id="@+id/Start_Page"
                android:layout_weight="1"/>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:gravity="center"
        />
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/friend"
                android:id="@+id/Friend_list"
                android:layout_weight="1"
                android:visibility="invisible"/>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:gravity="center"
        />
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/user"
                android:id="@+id/User_Info"
                android:layout_weight="1"/>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:gravity="center"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
